<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:background">@color/white</item>

    </style>

    <style name="AppThemeGreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkGreen</item>
      <!--  <item name="android:textColor">@color/colorTextGreen</item> -->
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="background"> @color/backgroundGreen</item>
        <item name="backgroundTint"> @color/backgroundTintGreen</item>

        <item name="android:textColor">@color/colorTextGreen</item>

        <item name="android:background"> @color/backgroundGreen</item>

    </style>

    <style name="AppThemeBlue" >

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlue</item>
        <!-- <item name="android:textColor">@color/colorTextGreen</item>  -->
        <item name="colorAccent">@color/colorAccentBlue</item>

       <!-- <item name="background"> @color/backgroundBlue</item> -->
        <item name="backgroundTint"> @color/backgroundTintBlue</item>
        <item name="android:textColor">@color/colorTextBlue</item>
        <item name="android:background"> @color/backgroundBlue</item>


    </style>

    <style name="AppThemeBlack" >

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlack</item>
        <!-- <item name="android:textColor">@color/colorTextGreen</item>  -->
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="background"> @color/backgroundBlack</item>
        <item name="backgroundTint"> @color/backgroundTintBlack</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:background"> @color/backgroundBlack</item>
    </style>


    <style name="Margin1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="Margin2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="Margin3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
